<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vehicles_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- Layout principal con RecyclerView y ProgressBar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Lista de vehículos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerVehicles"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clipToPadding="false"
            android:paddingBottom="72dp" />

        <!-- Mensaje de lista vacía -->
        <TextView
            android:id="@+id/tvNoVehicles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay vehículos registrados"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Indicador de carga -->
        <ProgressBar
            android:id="@+id/progressVehicles"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Botón flotante para añadir un nuevo vehículo -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddVehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:contentDescription="Añadir vehículo"
        app:srcCompat="@drawable/ic_add_modern"
        app:tint="@android:color/white"
        app:backgroundTint="@color/purple_500"
        app:layout_anchor="@id/recyclerVehicles"
        app:layout_anchorGravity="bottom|end"
        app:elevation="10dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


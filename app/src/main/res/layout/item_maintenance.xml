<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cabecera con degradado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@drawable/card_header_gradient">

            <!-- Título y subtítulo -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMaintType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cambio de aceite"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvMaintMileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120000 km"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/tvMaintVehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marca Modelo (Año)"
                    android:textColor="@android:color/white"
                    android:alpha="0.9"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Botones de acción -->
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar"
                android:tint="@android:color/white"/>

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar"
                android:tint="@android:color/white"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <!-- Columna izquierda: Matrícula y Fecha -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Matrícula -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_car_placeholder"
                        android:tint="@color/purple_500"/>
                    <TextView
                        android:id="@+id/tvMaintPlate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4456LLL"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginStart="6dp"/>
                </LinearLayout>

                <!-- Fecha -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/purple_500"/>
                    <TextView
                        android:id="@+id/tvMaintDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-05-04"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginStart="6dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Columna derecha: Coste -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_euro"
                    android:tint="@color/purple_500"/>
                <TextView
                    android:id="@+id/tvMaintCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="49.99 €"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

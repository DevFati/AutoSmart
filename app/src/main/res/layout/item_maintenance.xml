<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cabecera con degradado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/card_header_gradient">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_car_placeholder"
                android:tint="@android:color/white"
                android:contentDescription="Coche"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/tvMaintVehicle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Marca Modelo (Año)"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar"
                android:tint="@android:color/white"/>

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar"
                android:tint="@android:color/white"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Fila superior: Matrícula y Fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Matrícula -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_car_placeholder"
                        android:tint="@color/purple_500"/>
                    <TextView
                        android:id="@+id/tvMaintPlate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4456LLL"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Fecha -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/purple_500"/>
                    <TextView
                        android:id="@+id/tvMaintDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-05-04"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Tipo de mantenimiento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_tools"
                    android:tint="@color/purple_500"/>
                <TextView
                    android:id="@+id/tvMaintType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cambio de aceite"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Coste -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_euro"
                    android:tint="@color/purple_500"/>
                <TextView
                    android:id="@+id/tvMaintCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="49.99 €"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

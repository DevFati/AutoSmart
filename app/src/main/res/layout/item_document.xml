<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Thumbnail del documento -->
        <ImageView
            android:id="@+id/imgDocThumb"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_bg"
            android:padding="8dp"
            android:src="@drawable/ic_document"/>

        <!-- Información del documento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvDocName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del documento"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#222"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvDocType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de documento"
                android:textColor="#666"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvDocDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textColor="#888"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp">

            <ImageButton
                android:id="@+id/btnEditDoc"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                android:tint="@color/purple_500"
                android:contentDescription="Editar documento"/>

            <ImageButton
                android:id="@+id/btnDeleteDoc"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:tint="@color/red_500"
                android:contentDescription="Eliminar documento"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Logo de la marca -->
        <ImageView
            android:id="@+id/imgBrandLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:contentDescription="Logo de la marca"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_car_placeholder"/>

        <!-- Texto con marca y modelo -->
        <TextView
            android:id="@+id/tvBrandModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgBrandLogo"
            android:layout_marginStart="12dp"
            android:text="Marca Modelo"
            android:textSize="16sp"/>

        <!-- AÃ±o -->
        <TextView
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBrandModel"
            android:layout_toEndOf="@id/imgBrandLogo"
            android:layout_marginStart="12dp"
            android:text="2022"/>

        <!-- Motor -->
        <TextView
            android:id="@+id/tvEngine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvYear"
            android:layout_toEndOf="@id/imgBrandLogo"
            android:layout_marginStart="12dp"
            android:text="Diesel"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
